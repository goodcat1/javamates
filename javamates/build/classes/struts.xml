<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<bean type="com.opensymphony.xwork2.ObjectFactory" name="cdi"
		class="edu.javamates.cdi.CdiObjectFactory" />

	<constant name="struts.devMode" value="true" />

	<constant name="struts.objectFactory" value="cdi" />
	<constant name="struts.class.reloading.reloadConfig" value="false" />

	<package name="basicstruts2" namespace="/" extends="struts-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="MyAction" class="edu.javamates.action.MyAction">
			<result name="success">/jsp/my-action.jsp</result>
		</action>

		<action name="PrepareRequestForClaim"
			class="edu.javamates.action.PrepareRequestForClaimAction">
			<result name="success">/jsp/request-claim.jsp</result>
		</action>

		<action name="ListActiveClaims" class="edu.javamates.action.ListActiveClaimsAction">
			<result name="success" type="org.apache.struts2.json.JSONResult" />
		</action>

	</package>

</struts>